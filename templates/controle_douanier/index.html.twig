{# templates/controle_douanier/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}📋 Liste des contrôles douaniers{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card mb-4" style="background-color: white;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">📋 Liste des contrôles douaniers</h1>
            <div>
                <a href="{{ path('app_controle_douanier_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i> ➕ Nouveau contrôle
                </a>
                <a href="{{ path('app_controle_douanier_calendar') }}" class="btn btn-info ms-2">
                    <i class="fas fa-calendar-alt"></i> 📅 Calendrier
                </a>
            </div>
        </div>

        {% if pendingControlsCount > 0 %}
            <div class="alert alert-warning alert-dismissible fade show m-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Il y a {{ pendingControlsCount }} contrôle(s) en attente pour aujourd'hui ou demain
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        {# Formulaire de recherche #}
        <div class="card-body border-bottom pb-3">
            <form method="GET" action="{{ path('app_controle_douanier_index') }}" class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher par pays ou commentaires" value="{{ searchTerm ?? '' }}">
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="status" class="form-select">
                        <option value="all" {% if selectedStatus is not defined or selectedStatus == 'all' %}selected{% endif %}>Tous les statuts</option>
                        <option value="En attente" {% if selectedStatus == 'En attente' %}selected{% endif %}>En attente</option>
                        <option value="En cours" {% if selectedStatus == 'En cours' %}selected{% endif %}>En cours</option>
                        <option value="Validé" {% if selectedStatus == 'Validé' %}selected{% endif %}>Validé</option>
                        <option value="Rejeté" {% if selectedStatus == 'Rejeté' %}selected{% endif %}>Rejeté</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="date" name="dateFrom" class="form-control" value="{{ dateFrom ?? '' }}">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="date" name="dateTo" class="form-control" value="{{ dateTo ?? '' }}">
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i> 🔍 Rechercher
                    </button>
                    <a href="{{ path('app_controle_douanier_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-sync-alt me-1"></i> 🔄 Réinitialiser
                    </a>
                </div>
            </form>
        </div>

        {# Résultat filtré #}
        {% if searchTerm or (selectedStatus is defined and selectedStatus != 'all') or dateFrom or dateTo %}
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle me-2"></i> Résultats filtrés
                {% if searchTerm %}<span class="badge bg-primary ms-2">Recherche: "{{ searchTerm }}"</span>{% endif %}
                {% if selectedStatus and selectedStatus != 'all' %}<span class="badge bg-secondary ms-2">Statut: {{ selectedStatus }}</span>{% endif %}
                {% if dateFrom %}<span class="badge bg-info ms-2">Depuis: {{ dateFrom }}</span>{% endif %}
                {% if dateTo %}<span class="badge bg-info ms-2">Jusqu'à: {{ dateTo }}</span>{% endif %}
            </div>
        {% endif %}

        {# Tableau de résultats #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>🏳️ Pays de douane</th>
                        <th>⚖️ Poids du colis</th>
                        <th>📊 Statut</th>
                        <th>📅 Date de contrôle</th>
                        <th>📍 Coordonnées</th>
                        <th>🔧 Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for controle_douanier in controle_douaniers %}
                    <tr>
                        <td>{{ controle_douanier.paysDouane }}</td>
                        <td>{{ controle_douanier.livraison.poidsColis ?? 'Non spécifié' }} kg</td>
                        <td>
                            <span class="badge rounded-pill bg-{{ controle_douanier.statut == 'Validé' ? 'success' : (controle_douanier.statut == 'Rejeté' ? 'danger' : (controle_douanier.statut == 'En cours' ? 'warning' : 'info')) }}">
                                {{ controle_douanier.statut }}
                            </span>
                        </td>
                        <td>{{ controle_douanier.dateControle ? controle_douanier.dateControle|date('d/m/Y') : '' }}</td>
                        <td>
                            {% if controle_douanier.latitude and controle_douanier.longitude %}
                                {{ controle_douanier.latitude|number_format(6) }}, {{ controle_douanier.longitude|number_format(6) }}
                            {% else %}
                                Non renseignées
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_controle_douanier_show', {'id_controle': controle_douanier.idControle}) }}" class="btn btn-sm btn-info">
                                    👁️ Voir
                                </a>
                                <a href="{{ path('app_controle_douanier_edit', {'id_controle': controle_douanier.idControle}) }}" class="btn btn-sm btn-primary ms-1">
                                    ✏️ Modifier
                                </a>
                                <form method="post" action="{{ path('app_controle_douanier_delete', {'id_controle': controle_douanier.idControle}) }}" class="d-inline ms-1" onsubmit="return confirm('Êtes-vous sûr ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controle_douanier.idControle) }}">
                                    <button class="btn btn-sm btn-danger">🗑️ Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            {% if searchTerm or (selectedStatus is defined and selectedStatus != 'all') or dateFrom or dateTo %}
                                <i class="fas fa-search"></i> Aucun résultat trouvé
                            {% else %}
                                <i class="fas fa-info-circle"></i> Aucun contrôle enregistré
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Statistiques #}
    <div class="card mb-4" style="background-color: white;">
        <div class="card-header">
            <h2 class="h5 mb-0">📊 Statistiques des contrôles</h2>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card shadow-sm p-3" style="height: 250px; max-width: 400px; margin: auto;">
                        <canvas id="statisticsChart" style="height: 100%; width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Messages Flash #}
    <div class="flash-messages">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('calendar') }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Graphique des statistiques
            const ctx = document.getElementById('statisticsChart').getContext('2d');
            const statisticsData = {{ statistics|json_encode|raw }};
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: Object.keys(statisticsData),
                    datasets: [{
                        data: Object.values(statisticsData),
                        backgroundColor: ['#FF6384', '#36A2EB', '#4BC0C0', '#FFCE56'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}