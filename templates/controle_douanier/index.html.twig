            </div>
        {% endif %}
        
        <!-- Formulaire de recherche -->
        <div class="card-body border-bottom pb-3">
            <form method="GET" action="{{ path('app_controle_douanier_index') }}" class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher par pays ou commentaires" value="{{ searchTerm ?? '' }}">
                    </div>
                </div>
                
                <div class="col-md-2">
                    <select name="status" class="form-select">
                        <option value="all" {% if selectedStatus is not defined or selectedStatus == 'all' %}selected{% endif %}>Tous les statuts</option>
                        <option value="En attente" {% if selectedStatus == 'En attente' %}selected{% endif %}>En attente</option>
                        <option value="En cours" {% if selectedStatus == 'En cours' %}selected{% endif %}>En cours</option>
                        <option value="Valid√©" {% if selectedStatus == 'Valid√©' %}selected{% endif %}>Valid√©</option>
                        <option value="Rejet√©" {% if selectedStatus == 'Rejet√©' %}selected{% endif %}>Rejet√©</option>
                    </select>
                </div>
                
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="date" name="dateFrom" class="form-control" placeholder="Date de d√©but" value="{{ dateFrom ?? '' }}">
                    </div>
                </div>
                
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="date" name="dateTo" class="form-control" placeholder="Date de fin" value="{{ dateTo ?? '' }}">
                    </div>
                </div>
                
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i> üîç Rechercher
                    </button>
                    <a href="{{ path('app_controle_douanier_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-sync-alt me-1"></i> üîÑ R√©initialiser
                    </a>
                </div>
            </form>
        </div>
        
        <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <!-- Indicateur de r√©sultats de recherche -->
            {% if searchTerm is defined and searchTerm is not empty or selectedStatus is defined and selectedStatus != 'all' and selectedStatus is not empty or dateFrom is defined and dateFrom is not empty or dateTo is defined and dateTo is not empty %}
                <div class="mb-3">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> R√©sultats filtr√©s
                        {% if searchTerm is not empty %}
                            <span class="badge bg-primary ms-2">Recherche: "{{ searchTerm }}"</span>
                        {% endif %}
                        {% if selectedStatus is not empty and selectedStatus != 'all' %}
                            <span class="badge bg-secondary ms-2">Statut: {{ selectedStatus }}</span>
                        {% endif %}
                        {% if dateFrom is not empty %}
                            <span class="badge bg-info ms-2">Depuis: {{ dateFrom }}</span>
                        {% endif %}
                        {% if dateTo is not empty %}
                            <span class="badge bg-info ms-2">Jusqu'√†: {{ dateTo }}</span>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>üè≥Ô∏è Pays de douane</th>
                            <th>‚öñÔ∏è Poids du colis</th>
                            <th>üìä Statut</th>
                            <th>üìÖ Date de contr√¥le</th>
                            <th>üìç Coordonn√©es</th>
                            <th>üîß Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for controle_douanier in controle_douaniers %}
                        <tr>
                            <td>{{ controle_douanier.paysDouane }}</td>
                            <td>{{ controle_douanier.livraison.poidsColis ?? 'Non sp√©cifi√©' }} kg</td>
                            <td>
                                <span class="badge rounded-pill bg-{{ controle_douanier.statut == 'Valid√©' ? 'success' : (controle_douanier.statut == 'Rejet√©' ? 'danger' : (controle_douanier.statut == 'En cours' ? 'warning' : 'info')) }}">
                                    {{ controle_douanier.statut }}
                                </span>
                            </td>
                            <td>{{ controle_douanier.dateControle ? controle_douanier.dateControle|date('d/m/Y') : '' }}</td>
                            <td>
                                {% if controle_douanier.latitude and controle_douanier.longitude %}
                                    {{ controle_douanier.latitude|number_format(6) }}, {{ controle_douanier.longitude|number_format(6) }}
                                {% else %}
                                    Non renseign√©es
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_controle_douanier_show', {'id_controle': controle_douanier.idControle}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> üëÅÔ∏è Voir
                                    </a>
                                    <a href="{{ path('app_controle_douanier_edit', {'id_controle': controle_douanier.idControle}) }}" class="btn btn-sm btn-primary ms-1">
                                        <i class="fas fa-edit"></i> ‚úèÔ∏è Modifier
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_controle_douanier_delete', {'id_controle': controle_douanier.idControle}) }}" 
                                          class="d-inline ms-1"
                                          onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce contr√¥le douanier?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controle_douanier.idControle) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> üóëÔ∏è Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">
                                {% if searchTerm is defined and searchTerm is not empty or selectedStatus is defined and selectedStatus != 'all' and selectedStatus is not empty or dateFrom is defined and dateFrom is not empty or dateTo is defined and dateTo is not empty %}
                                    <div class="py-4">
                                        <i class="fas fa-search me-2 text-muted"></i> 
                                        <span class="text-muted">Aucun contr√¥le douanier ne correspond √† votre recherche</span>
                                    </div>
                                {% else %}
                                    <div class="py-4">
                                        <i class="fas fa-info-circle me-2 text-muted"></i> 
                                        <span class="text-muted">‚ùå Aucun contr√¥le douanier trouv√©</span>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Section Statistiques r√©duite -->
    <div class="card mb-4" style="background-color: white;">
        <div class="card-header">
            <h2 class="h5 mb-0">üìä Statistiques des contr√¥les</h2>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <canvas id="statisticsChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="flash-messages">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert" data-auto-dismiss="5000">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Graphique des statistiques
            const ctx = document.getElementById('statisticsChart').getContext('2d');
            const statisticsData = {{ statistics|json_encode|raw }};
            
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: Object.keys(statisticsData),
                    datasets: [{
                        data: Object.keys(statisticsData).map(key => statisticsData[key]),
                        backgroundColor: [
                            '#FF6384', // En attente
                            '#36A2EB', // En cours
                            '#4BC0C0', // Valid√©
                            '#FFCE56'  // Rejet√©
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
            
            // Fermeture automatique des alertes
            document.querySelectorAll('[data-auto-dismiss]').forEach(el => {
                const timeout = parseInt(el.getAttribute('data-auto-dismiss'));
                setTimeout(() => {
                    const alert = new bootstrap.Alert(el);
                    alert.close();
                }, timeout);
            });
            
            // Script pour la gestion des dates (emp√™cher dateTo < dateFrom)
            const dateFromInput = document.querySelector('input[name="dateFrom"]');
            const dateToInput = document.querySelector('input[name="dateTo"]');
            
            if (dateFromInput && dateToInput) {
                dateFromInput.addEventListener('change', function() {
                    if (dateToInput.value && dateFromInput.value > dateToInput.value) {
                        dateToInput.value = dateFromInput.value;
                    }
                    dateToInput.min = dateFromInput.value;
                });
                
                dateToInput.addEventListener('change', function() {
                    if (dateFromInput.value && dateToInput.value < dateFromInput.value) {
                        dateFromInput.value = dateToInput.value;
                    }
                });
                
                // Initialisation
                if (dateFromInput.value) {
                    dateToInput.min = dateFromInput.value;
                }
            }
        });
    </script>
{% endblock %}