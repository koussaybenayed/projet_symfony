{% extends 'base.html.twig' %}

{% block title %}üìã Liste des contr√¥les douaniers{% endblock %}

{% block body %}
    <div class="card mb-4" style="background-color: white;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">üìã Liste des contr√¥les douaniers</h1>
            <a href="{{ path('app_controle_douanier_new') }}" class="btn btn-success">
                <i class="fas fa-plus me-1"></i> ‚ûï Nouveau contr√¥le
            </a>
        </div>
        
        <!-- Notification des contr√¥les en attente -->
        {% if pendingControlsCount > 0 %}
            <div class="alert alert-warning alert-dismissible fade show m-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Il y a {{ pendingControlsCount }} contr√¥le(s) en attente pour aujourd'hui ou demain
