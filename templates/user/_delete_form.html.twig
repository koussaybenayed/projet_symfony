<form method="post" action="{{ path('app_user_delete', {'user_id': user.getUserId()}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.getUserId()) }}">
    <button class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete account
    </button>
</form>