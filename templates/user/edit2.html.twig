{% extends 'basefront.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    {{ parent() }} {# Preserve base template styles #}
    <style>
        /* Scoped to edit-user-container only */
        .edit-user-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            font-family: 'Segoe UI', sans-serif;
        }

        .edit-user-container h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-size: 28px;
        }

        .edit-user-container .form-group {
            margin-bottom: 20px;
        }

        .edit-user-container input,
        .edit-user-container select,
        .edit-user-container textarea {
            width: 100%;
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
        }

        .edit-user-container label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
        }

        .edit-user-container .btn-update {
            display: block;
            width: 100%;
            margin-top: 30px;
            padding: 12px;
            font-size: 16px;
            background-color: #4e6cfb;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .edit-user-container .btn-update:hover {
            background-color: #3f5ae0;
        }

        .edit-user-container .delete-form {
            margin-top: 20px;
            text-align: center;
        }

        .edit-user-container .delete-form button {
            background-color: #e74c3c;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .edit-user-container .delete-form button:hover {
            background-color: #c0392b;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="edit-user-container">
        <h1>Edit Profile</h1>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn-update">Update</button>
           
        {{ form_end(form) }}

        
    </div>
{% endblock %}