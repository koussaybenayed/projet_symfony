{% extends 'base.html.twig' %}

{% block title %}Modifier Livraison #{{ livraison.destination_status }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-btn">
            <a href="{{ path('app_livraison_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
        </div>
        <div class="page-title text-end">
            <h4><i class="fas fa-edit"></i> Modifier Livraison #{{ livraison.destination_status }}</h4>
            <h6 class="text-muted">
                Créée le : {{ livraison.createdAt ? livraison.createdAt|date('d/m/Y H:i') : 'Date non disponible' }}
            </h6>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    {{ include('livraison/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    
                    <div class="mt-4 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Dernière modification : {{ livraison.createdAt ? livraison.createdAt|date('d/m/Y H:i') : 'N/A' }}
                        </small>
                        <div>
                            {{ include('livraison/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #ffffff !important;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .page-title h4 {
            font-size: 22px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        
        .page-title h6 {
            font-size: 14px;
        }
        
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-control, .form-select {
            border-radius: 5px;
            padding: 10px 15px;
            border: 1px solid #e0e0e0;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #5D78FF;
            box-shadow: 0 0 0 0.2rem rgba(93, 120, 255, 0.25);
        }
        
        .btn-submit {
            background-color: #5D78FF;
            color: white;
            padding: 10px 25px;
            font-weight: 500;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .btn-submit:hover {
            background-color: #4a63e0;
            color: white;
            transform: translateY(-2px);
        }
        
        .btn-delete {
            background-color: #F44336;
            color: white;
            padding: 10px 25px;
            font-weight: 500;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .btn-delete:hover {
            background-color: #d32f2f;
            color: white;
        }
    </style>
{% endblock %}