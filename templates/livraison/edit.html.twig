{% extends 'base.html.twig' %}

{% block title %}✏️ Modifier Livraison #{{ livraison.destination_status }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-btn">
            <a href="{{ path('app_livraison_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> ↩️ Retour à la liste
            </a>
        </div>
        <div class="page-title">
            <h4><i class="fas fa-edit me-2"></i> ✏️ Modifier Livraison </h4>
            <h6>
                📅 Créée le : {{ livraison.createdAt ? livraison.createdAt|date('d/m/Y H:i') : 'Date non disponible' }}
                <span class="badge bg-{{ livraison.destinationStatus == 'delivered' ? 'success' : 
                    (livraison.destinationStatus == 'pending' ? 'warning' : 
                    (livraison.destinationStatus == 'cancelled' ? 'danger' : 'info')) }} ms-2">
                    {% if livraison.destinationStatus == 'delivered' %}
                        ✅ 
                    {% elseif livraison.destinationStatus == 'pending' %}
                        ⏳ 
                    {% elseif livraison.destinationStatus == 'cancelled' %}
                        ❌ 
                    {% else %}
                        ℹ️ 
                    {% endif %}
                    {{ livraison.destinationStatus|capitalize }}
                </span>
            </h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    {{ include('livraison/_form.html.twig', {'button_label': '💾 Mettre à jour'}) }}
                    
                    <div class="mt-4 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-history me-1"></i>
                            📅 Dernière modification : {{ livraison.createdAt ? livraison.createdAt|date('d/m/Y à H:i') : '🕒 N/A' }}
                        </small>
                        <div>
                            {{ include('livraison/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}