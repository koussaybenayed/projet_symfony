<form method="post" action="{{ path('app_livraison_delete', {'id_livraisons': livraison.idLivraisons}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette livraison?');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.idLivraisons) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> 🗑️ Supprimer
    </button>
</form>