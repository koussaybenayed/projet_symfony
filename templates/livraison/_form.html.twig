{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.estimated_delivery, 'Date de livraison estimée', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.estimated_delivery, {'attr': {'class': 'form-control'}}) }}
                <div class="form-text">{{ form_help(form.estimated_delivery) }}</div>
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.estimated_delivery) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.delivery_cost, 'Coût de livraison (€)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.delivery_cost, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.delivery_cost) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.poids_colis, 'Poids du colis (kg)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.poids_colis, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.poids_colis) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.destination_status, 'Statut de destination', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.destination_status, {'attr': {'class': 'form-select'}}) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.destination_status) }}
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group mt-4">
        <button class="btn btn-submit me-2">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_livraison_index') }}" class="btn btn-secondary">
            <i class="fas fa-times"></i> Annuler
        </a>
    </div>
{{ form_end(form) }}