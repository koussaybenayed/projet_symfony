{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="row">
    {% for field in [form.estimated_delivery, form.delivery_cost, form.poids_colis, form.destination_status] %}
        <div class="col-md-6">
            <div class="form-group mb-4">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                <div class="input-group">
                    {% if field.vars.name == 'estimated_delivery' %}
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    {% elseif field.vars.name == 'delivery_cost' %}
                        <span class="input-group-text"><i class="fas fa-euro-sign"></i></span>
                    {% elseif field.vars.name == 'poids_colis' %}
                        <span class="input-group-text"><i class="fas fa-weight-hanging"></i></span>
                    {% elseif field.vars.name == 'destination_status' %}
                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    {% endif %}
                    {{ form_widget(field, {'attr': {'class': field.vars.block_prefixes[1] == 'choice' ? 'form-select' : 'form-control'}}) }}
                </div>
                {% if field.vars.help is defined %}
                    <small class="form-text text-muted">{{ field.vars.help }}</small>
                {% endif %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(field) }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<div class="form-group mt-5 pt-3 border-top">
    <button type="submit" class="btn btn-primary me-3">
        <i class="fas fa-save me-1"></i> üíæ {{ button_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('app_livraison_index') }}" class="btn btn-outline-secondary">
        <i class="fas fa-times me-1"></i> ‚ùå Annuler
    </a>
</div>
{{ form_end(form) }}
