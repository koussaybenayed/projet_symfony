{% extends 'base.html.twig' %}

{% block title %}Gestion des Livraisons{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-title">
            <h4><i class="fas fa-truck"></i> Gestion des Livraisons</h4>
            <h6>Liste complète des livraisons enregistrées</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table datanew">
                    <thead>
                        <tr>
                            <th>Référence</th>
                            <th>Date Estimation</th>
                            <th>Coût</th>
                            <th>Créé le</th>
                            <th>Poids</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for livraison in livraisons %}
                        <tr>
                            <td>Liv-#{{ "%04d"|format(livraison.idLivraisons) }}</td>
                            <td>{{ livraison.estimatedDelivery ? livraison.estimatedDelivery|date('d/m/Y') : 'N/A' }}</td>
                            <td>{{ livraison.deliveryCost }} €</td>
                            <td>{{ livraison.createdAt ? livraison.createdAt|date('d/m/Y') : 'N/A' }}</td>
                            <td>{{ livraison.poidsColis }} kg</td>
                            <td>
                                <span class="badge bg-{{ livraison.destinationStatus == 'delivered' ? 'success' : 
                                    (livraison.destinationStatus == 'pending' ? 'warning' : 
                                    (livraison.destinationStatus == 'cancelled' ? 'danger' : 'info')) }}">
                                    {{ livraison.destinationStatus|capitalize }}
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="form-button-action">
                                    <a href="{{ path('app_livraison_show', {'id_livraisons': livraison.id_livraisons}) }}" 
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_livraison_edit', {'id_livraisons': livraison.id_livraisons}) }}" 
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_livraison_delete', {'id_livraisons': livraison.id_livraisons}) }}" 
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette livraison?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id_livraisons) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i>Aucune livraison trouvée
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <!-- Bouton déplacé ici -->
            <div class="d-flex justify-content-end mt-4">
                <a href="{{ path('app_livraison_new') }}" class="btn btn-added">
                    <i class="fas fa-plus"></i> Ajouter une Livraison
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #ffffff !important;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .page-title h4 {
            font-size: 22px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        
        .page-title h6 {
            font-size: 14px;
            color: #777;
        }
        
        .btn-added {
            background-color: #5D78FF;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-added:hover {
            background-color: #4a63e0;
            color: white;
            transform: translateY(-2px);
        }
        
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }
        
        .table {
            margin-bottom: 0;
        }
        
        .table thead th {
            border-bottom: 1px solid #f0f0f0;
            font-weight: 600;
            color: #555;
            text-transform: uppercase;
            font-size: 13px;
        }
        
        .table tbody tr {
            transition: all 0.3s;
        }
        
        .table tbody tr:hover {
            background-color: #f9f9f9;
        }
        
        .form-button-action {
            display: flex;
            justify-content: flex-end;
            gap: 8px;
        }
        
        .badge {
            font-weight: 500;
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 4px;
        }
        
        .bg-success {
            background-color: #4CAF50 !important;
        }
        
        .bg-warning {
            background-color: #FF9800 !important;
        }
        
        .bg-danger {
            background-color: #F44336 !important;
        }
        
        .bg-info {
            background-color: #2196F3 !important;
        }
        
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %}