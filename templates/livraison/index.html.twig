{# templates/livraison/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}🚚 Gestion des Livraisons{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-title">
            <h4><i class="fas fa-truck me-2"></i> 🚚 Gestion des Livraisons</h4>
            <h6>📋 Liste complète des livraisons enregistrées</h6>
        </div>
        <div class="page-btn">
            <a href="{{ path('app_livraison_new') }}" class="btn btn-added">
                <i class="fas fa-plus-circle me-1"></i> ➕ Ajouter une Livraison
            </a>
            <a href="{{ path('app_livraison_weather') }}" class="btn btn-info ms-2">
                <i class="fas fa-cloud me-1"></i> 🌤️ Météo
            </a>
            <a href="{{ path('app_livraison_export_csv') }}" class="btn btn-success ms-2">
                <i class="fas fa-file-export me-1"></i> 📊 Exporter CSV
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="{{ path('app_livraison_index') }}" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group search-box">
                        <input type="text" name="search" class="form-control" placeholder="Rechercher par référence, transporteur ou statut..." 
                               value="{{ searchTerm ?? '' }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> 🔍 Rechercher
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="status" class="form-select">
                        <option value="all" {% if selectedStatus == 'all' %}selected{% endif %}>Tous les statuts</option>
                        <option value="en_attente" {% if selectedStatus == 'en_attente' %}selected{% endif %}>En attente</option>
                        <option value="en_cours" {% if selectedStatus == 'en_cours' %}selected{% endif %}>En cours</option>
                        <option value="livre" {% if selectedStatus == 'livre' %}selected{% endif %}>Livré</option>
                        <option value="annule" {% if selectedStatus == 'annule' %}selected{% endif %}>Annulé</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <a href="{{ path('app_livraison_index') }}" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-sync-alt"></i> 🔄 Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table datanew">
                    <thead>
                        <tr>
                            <th>🔖 Référence</th>
                            <th>🚚 Transporteur</th>
                            <th>📅 Date Livraison</th>
                            <th>💰 Coût</th>
                            <th>📅 Créé le</th>
                            <th>⚖️ Poids (kg)</th>
                            <th>🏷️ Statut</th>
                            <th class="text-end">🔧 Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for livraison in pagination %}
                        <tr>
                            <td>📦 Liv-#{{ "%04d"|format(livraison.id_livraisons) }}</td>
                            <td>
                                {% if livraison.transporteur %}
                                    🚛 {{ livraison.transporteur }}
                                {% else %}
                                    <span class="text-muted">Non attribué</span>
                                {% endif %}
                            </td>
                            <td>{{ livraison.estimated_delivery ? livraison.estimated_delivery|date('d/m/Y') : '🕒 N/A' }}</td>
                            <td>{{ livraison.delivery_cost }} €</td>
                            <td>{{ livraison.created_at ? livraison.created_at|date('d/m/Y') : '🕒 N/A' }}</td>
                            <td>{{ livraison.poids_colis }}</td>
                            <td>
                                <span class="badge bg-{{ livraison.destination_status == 'livre' ? 'success' : 
                                    (livraison.destination_status == 'en_attente' ? 'warning' : 
                                    (livraison.destination_status == 'annule' ? 'danger' : 'info')) }}">
                                    {% if livraison.destination_status == 'livre' %}
                                        ✅ Livré
                                    {% elseif livraison.destination_status == 'en_cours' %}
                                        🚚 En cours
                                    {% elseif livraison.destination_status == 'en_attente' %}
                                        ⏳ En attente
                                    {% elseif livraison.destination_status == 'annule' %}
                                        ❌ Annulé
                                    {% else %}
                                        ℹ️ {{ livraison.destination_status|capitalize }}
                                    {% endif %}
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="form-button-action">
                                    <a href="{{ path('app_livraison_show', {'id_livraisons': livraison.id_livraisons}) }}" 
                                       class="btn btn-primary btn-sm" title="Voir détails">
                                        <i class="fas fa-eye me-1"></i> 👁️ Voir
                                    </a>
                                    <a href="{{ path('app_livraison_edit', {'id_livraisons': livraison.id_livraisons}) }}" 
                                       class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit me-1"></i> ✏️ Modifier
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_livraison_delete', {'id_livraisons': livraison.id_livraisons}) }}" 
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette livraison?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id_livraisons) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">
                                            <i class="fas fa-trash-alt me-1"></i> 🗑️ Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i> 
                                {% if searchTerm or selectedStatus != 'all' %}
                                    📭 Aucune livraison ne correspond à votre recherche
                                {% else %}
                                    📭 Aucune livraison trouvée
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <div class="pagination-wrapper mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

    <style>
        .pagination-wrapper {
            display: flex;
            justify-content: center;
        }
        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
        .pagination .page-link {
            color: #007bff;
            padding: 0.5rem 0.75rem;
        }
        .badge.bg-success { background-color: #28a745!important; }
        .badge.bg-warning { background-color: #ffc107!important; color: #212529; }
        .badge.bg-danger { background-color: #dc3545!important; }
        .badge.bg-info { background-color: #17a2b8!important; }
    </style>
{% endblock %}