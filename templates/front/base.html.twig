<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Gestion Douane{% endblock %}</title>
  
  {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
      .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('{{ asset('images/banner/banner2.jpg') }}');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 100px 0;
        margin-bottom: 50px;
      }
      .card-header {
        font-weight: 600;
      }
    </style>
  {% endblock %}
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="{{ path('app_douane_index') }}">DOUANE AGEN</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_douane_index' ? 'active' }}" href="{{ path('app_douane_index') }}">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_douane_demande' ? 'active' }}" href="{{ path('app_douane_demande') }}">Nouvelle demande</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_douane_suivi' ? 'active' }}" href="{{ path('app_douane_suivi') }}">Suivi</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_douane_faq' ? 'active' }}" href="{{ path('app_douane_faq') }}">FAQ</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    {% for message in app.flashes('success') %}
      <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% block body %}{% endblock %}
  </main>

  <footer class="bg-dark text-white py-3 mt-5">
    <div class="container text-center">
      <p class="mb-0">&copy; {{ "now"|date("Y") }} Service Douanier - Tous droits réservés</p>
    </div>
  </footer>

  {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function() {
        // Activation des tooltips
        $('[data-bs-toggle="tooltip"]').tooltip();
        
        // Initialisation de Select2 si présent
        if ($().select2) {
          $('.select2').select2({
            theme: 'bootstrap-5'
          });
        }
      });
    </script>
  {% endblock %}
</body>
</html>