{% extends 'front/base.html.twig' %}

{% block title %}Détails contrôle #{{ controle_douanier.id_controle }}{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_douane_index') }}">Contrôles douaniers</a></li>
            <li class="breadcrumb-item active">Détails #{{ controle_douanier.id_controle }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Détails du contrôle</h5>
                    <span class="badge rounded-pill bg-{{ controle_douanier.statut == 'Validé' ? 'success' : 
                          (controle_douanier.statut == 'En attente' ? 'warning' : 
                          (controle_douanier.statut == 'Rejeté' ? 'danger' : 'info')) }}">
                        {{ controle_douanier.statut }}
                    </span>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Référence contrôle:</dt>
                        <dd class="col-sm-8">#{{ controle_douanier.id_controle }}</dd>

                        <dt class="col-sm-4">Date de contrôle:</dt>
                        <dd class="col-sm-8">{{ controle_douanier.date_controle|date('d/m/Y') }}</dd>

                        <dt class="col-sm-4">Pays de douane:</dt>
                        <dd class="col-sm-8">{{ controle_douanier.pays_douane }}</dd>

                        {% if controle_douanier.commentaires %}
                        <dt class="col-sm-4">Commentaires:</dt>
                        <dd class="col-sm-8">{{ controle_douanier.commentaires }}</dd>
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations livraison</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Référence:</dt>
                        <dd class="col-sm-7">#{{ controle_douanier.livraison.id_livraisons }}</dd>

                        <dt class="col-sm-5">Poids:</dt>
                        <dd class="col-sm-7">{{ controle_douanier.livraison.poids_colis }} kg</dd>

                        <dt class="col-sm-5">Statut:</dt>
                        <dd class="col-sm-7">{{ controle_douanier.livraison.destination_status }}</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_douane_suivi') }}?reference={{ controle_douanier.id_controle }}" 
                       class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-search me-1"></i> Suivre ce contrôle
                    </a>
                    {% if controle_douanier.statut == 'Rejeté' %}
                    <a href="{{ path('app_douane_demande') }}" class="btn btn-outline-primary w-100">
                        <i class="fas fa-redo me-1"></i> Refaire une demande
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}