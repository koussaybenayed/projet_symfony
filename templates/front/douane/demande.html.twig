{% extends 'front/base.html.twig' %}

{% block title %}Demande de contrôle douanier{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Demande de contrôle douanier</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-4">
                        {{ form_label(form.livraison, 'Livraison concernée', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.livraison, {'attr': {'class': 'form-select select2'}}) }}
                        {{ form_errors(form.livraison) }}
                        <small class="form-text text-muted">Sélectionnez la livraison à contrôler</small>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(form.pays_douane, 'Pays de contrôle', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.pays_douane, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.pays_douane) }}
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(form.date_controle, 'Date prévue de contrôle', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date_controle, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date_controle) }}
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(form.commentaires, 'Commentaires', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.commentaires, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        {{ form_errors(form.commentaires) }}
                        <small class="form-text text-muted">Informations supplémentaires (max 1000 caractères)</small>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i> Soumettre la demande
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        // Initialisation de Select2
        $('.select2').select2({
            theme: 'bootstrap-5',
            placeholder: 'Sélectionnez une livraison',
            allowClear: true
        });
    });
</script>
{% endblock %}