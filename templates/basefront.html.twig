<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}NaviFly — Travel Made Elegant{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/front/plugins/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/plugins/themify-icons/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/style.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/front/images/favicon.ico') }}" type="image/x-icon">

    <style>
      :root {
        --primary: #0a2540;
        --accent: #635bff;
        --light: #f6f9fc;
        --font-main: 'Inter', sans-serif;
      }

      body {
        font-family: var(--font-main);
        background-color: var(--light);
        color: #1a1a1a;
        margin: 0;
        padding-top: 80px;
      }

      .navbar-stripe {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        background: linear-gradient(-45deg, #d53a9d, #6e61e9, #40c9ff, #ff6ec4);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
        backdrop-filter: saturate(180%) blur(10px);
      }

      @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      .navbar-brand {
        font-weight: 600;
        font-size: 1.5rem;
        color: white !important;
        text-decoration: none;
      }

      .nav-link {
        font-weight: 500;
        color: white !important;
        margin: 0 10px;
        transition: color 0.3s ease;
      }

      .nav-link:hover, .dropdown-toggle:hover {
        color: #f1f1f1 !important;
      }

      .btn-accent {
        background-color: #ffffff;
        color: var(--accent);
        border-radius: 6px;
        padding: 8px 16px;
        font-weight: 500;
        transition: background 0.3s ease;
        text-decoration: none;
      }

      .btn-accent:hover {
        background-color: #eeeeee;
      }

      footer {
        padding: 3rem 1rem;
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
        border-top: 1px solid #dee2e6;
      }

      .container-max {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .dropdown-menu {
        min-width: 180px;
      }
    </style>
  {% endblock %}
</head>
<body>

  <!-- Navigation -->
  <header class="navbar-stripe">
    <div class="container-max d-flex justify-content-between align-items-center py-3">
      <a class="navbar-brand" href="#">NaviFly</a>
      <nav class="d-flex align-items-center">
        {% set current = app.request.attributes.get('_route') %}
        
        <a class="nav-link {% if current == 'front_billet_list' %}fw-bold{% endif %}" 
           href="{{ path('front_billet_list') }}">
          Liste des billets
        </a>
        
        <a class="nav-link {% if current == 'app_assistance_index' %}fw-bold{% endif %}" 
           href="{{ path('app_assistance_index') }}">
          Mes assistances
        </a>
        
        <a class="nav-link {% if current == 'app_billet_favoris' %}fw-bold{% endif %}" 
           href="{{ path('app_billet_favoris') }}">
          Mes favoris
        </a>

        {% if app.user %}
          <div class="dropdown ms-3">
            <a class="nav-link dropdown-toggle" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="ti-user"></i> {{ app.user.userUsername }}
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
              <li><a class="dropdown-item" href="{{ path('app_user_profile') }}"><i class="ti-user"></i> Profile</a></li>
              <li><a class="dropdown-item" href="{{ path('app_user_edit1', {'user_id': app.user.getUserId}) }}"><i class="ti-pencil"></i> Edit Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="ti-power-off"></i> Logout</a></li>
            </ul>
          </div>
       
        {% endif %}
      </nav>
    </div>
  </header>

  <!-- Main Body -->
  <main class="container-max my-5">
    {% block body %}{% endblock %}
  </main>

  <!-- Footer -->
  <footer>
    © {{ "now"|date("Y") }} NaviFly. Tous droits réservés.
  </footer>

  {% block javascripts %}
    <script src="{{ asset('assets/front/plugins/jQuery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/front/plugins/bootstrap/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/script.js') }}"></script>
  {% endblock %}
</body>
</html>