
{% extends 'base.html.twig' %}

{% block title %}Modifier Réduction{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0" style="background-color: #e6f0ff;">
        <div class="card-header text-white" style="background-color: #007bff;">
            <h4><i class="fas fa-edit"></i> ✏️ Modifier la Réduction</h4>
        </div>
        <div class="card-body">
            <p class="text-center text-muted">Modifiez les informations de la réduction ci-dessous 🔧</p>

            <div class="d-flex justify-content-center">
                <div class="col-md-8">
                    {{ include('reduction/_form.html.twig', {'button_label': '💾 Enregistrer les modifications'}) }}
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_reduction_index') }}" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Revenir à la liste des réductions
                </a>
            </div>

            <div class="text-center mt-3">
                {{ include('reduction/_delete_form.html.twig', {'button_label': '🗑️ Supprimer la réduction'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
