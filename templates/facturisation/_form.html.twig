{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

{# Afficher les erreurs globales du formulaire #}
{% if form.vars.errors is not empty %}
    <div class="alert alert-danger">
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{{ form_widget(form) }}

{# Afficher les erreurs du champ 'amount' #}
{% if form.amount.vars.errors is not empty %}
    <div class="alert alert-danger">
        <ul>
            {% for error in form.amount.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}