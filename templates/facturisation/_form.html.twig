{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

{# Afficher les erreurs globales du formulaire #}
{% if form.vars.errors is not empty %}
    <div class="alert alert-danger">
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{# Affichage des champs du formulaire #}
<div class="form-group">
    {{ form_widget(form) }}
</div>

{# Afficher les erreurs sp√©cifiques du champ 'amount' #}
{% if form.amount.vars.errors is not empty %}
    <div class="alert alert-danger">
        <ul>
            {% for error in form.amount.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{# Bouton d'enregistrement #}
<div class="text-center mt-4">
    <button class="btn btn-primary">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
