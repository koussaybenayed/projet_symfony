{% block title %}Login{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #fafafa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 350px;
            margin: 60px auto;
            padding: 40px;
            background-color: #fff;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            text-align: center;
        }

        .login-container h1 {
            font-weight: 600;
            font-size: 24px;
            margin-bottom: 24px;
        }

        .login-container input {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #dbdbdb;
            border-radius: 6px;
            background-color: #fafafa;
        }

        .login-container input:focus {
            outline: none;
            border-color: #a8a8a8;
            background-color: #fff;
        }

        .login-container button {
            margin-top: 16px;
            width: 100%;
            background-color: #0095f6;
            border: none;
            color: white;
            padding: 10px;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
        }

        .alert {
            color: red;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .already-logged-in {
            margin-top: 20px;
            font-size: 14px;
        }

        .already-logged-in a {
            color: #0095f6;
            text-decoration: none;
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <h1>Login</h1>

        {% if error %}
            <div class="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="already-logged-in">
                You are logged in as {{ app.user.userIdentifier }} â€” 
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% else %}
            <form method="post">
                <input type="text" value="{{ last_username }}" name="user_username" placeholder="Username" required autofocus>
                <input type="password" name="user_password" placeholder="Password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="g-recaptcha" data-sitekey="6Lfyyh8rAAAAAO0sGM-1JWJvYy016iDgwz9BNdb0"></div>
                <button type="submit">Log in</button>
            </form>
            <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        {% endif %}
        
        <div class="small-text">
            Don't have an account? 
            <a href="{{ path('app_user_neww') }}">Sign up</a>
        </div>
        <a href="{{ path('app_forgot_password') }}">Forgot your password?</a>
    </div>
{% endblock %}
