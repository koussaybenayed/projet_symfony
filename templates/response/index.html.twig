{% extends 'base.html.twig' %}

{% block title %} Reponse {% endblock %}
    
{% block body %}
<div class="container-fluid">
<h1 class="mb-4">Reponse</h1>
  <table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Response Text</th>
            <th>Created At</th>
            <th>Reclamation Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for response in responses %}
        <tr>
            <td>{{ response.id }}</td>
            <td>{{ response.responseText }}</td>
            <td>{{ response.createdAt ? response.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                {% if response.reclamation is defined and response.reclamation %}
                    <span class="badge bg-info">
                        Reclamation #{{ response.reclamation.description }}
                    </span>
                {% else %}
                    <span class="badge bg-secondary">No Reclamation</span>
                {% endif %}
            </td>
            <td>
                   <div class="btn-group" role="group">
        <a href="{{ path('app_response_show', {'id': response.id}) }}" class="btn btn-sm btn-primary">Show</a>
        <a href="{{ path('app_response_edit', {'id': response.id}) }}" class="btn btn-sm btn-warning">Edit</a>
        <form method="post" action="{{ path('app_response_delete', {'id': response.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ response.id) }}">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
    </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5" class="text-center">
                <div class="alert alert-info">No responses found</div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="mt-3">
    <a href="{{ path('app_response_new') }}" class="btn btn-success">Create New Response</a>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h2>Treated Responses</h2>
        <div class="card">
            <div class="card-body">
                <table class="table table-sm table-success">
                    <thead>
                        <tr>
                            <th>Response </th>
                            <th>Reclamation </th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set responsesWithReclamation = responses|filter(r => r.reclamation is defined and r.reclamation) %}
                    {% for response in responsesWithReclamation %}
                        <tr>
                            <td>{{ response.responseText }}</td>
                            <td>{{ response.reclamation.description }}</td>
                            <td>{{ response.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No responses with reclamation</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
